@model CityCreation
@{
    ViewData["Title"] = "Edit";

    var active = Model.City.Country;
}

<h1>Editing @Model.City.Name</h1>
<hr />

<partial name="_GoBackButton" />

<div class="shadow border col-3">
    <form asp-action="Edit" asp-controller="">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>
        <div class="form-group">
            <label asp-for="City.Name"></label>
            <input asp-for="City.Name" />
            <span asp-validation-for="City.Name" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="City.Population"></label>
            <input asp-for="City.Population" />
            <span asp-validation-for="City.Population" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="City.PostalCode"></label>
            <input asp-for="City.PostalCode" />
            <span asp-validation-for="City.PostalCode" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="City.Country"></label>
            <select>
                <option value="@active.Id">@active.Name</option>
                <option value="@null">None</option>

                @foreach (var country in Model.Countries)
                {
                    if (country.Key != active.Id) // Checking for Id since cities can have the same name.
                    {
                        <option value="@country.Key">@country.Value</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
        </div>
    </form>
</div>