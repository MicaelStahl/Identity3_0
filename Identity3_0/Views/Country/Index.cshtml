@model List<Country>
@{
    ViewData["Title"] = "List of all countries";
}

<h1>List of all countries</h1>
<hr />
<a asp-action="Create" asp-controller="Country" class="btn btn-primary btn-sm mt-3 mb-3">Create new country</a>

@if (ViewBag.message != null)
{
    <div class="text-success font-weight-bold updatedText">@ViewBag.message</div>
}

@if (ViewBag.error != null)
{
    <div class="text-danger font-weight-bold updatedText">@ViewBag.error</div>
}

<div class="col-8">

    @if (Model != null || Model.Count != 0)
    {
        <table class="table table-striped table-active table-hover rounded">
            <caption>List of all countries</caption>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Population</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var country in Model)
                {
                    <tr>
                        <td>@country.Name</td>
                        <td>@country.Population</td>
                        <td>
                            <partial name="_EDD_Buttons" model="@country.Id" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>