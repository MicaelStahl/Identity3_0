@model PersonListWithMessage
@{
    ViewData["Title"] = "Index";
}

<h1>List of all people</h1>
<hr />
<partial name="_CreateButton" />

<div class="container shadow border">
    @if (ViewBag.message != null)
    {
        <div class="container text-success font-weight-bold updatedText">@ViewBag.message</div>
    }
    @if (Model.People.Count == 0)
    {
        <div class="text-danger font-weight-bold">No people are available. Please try again later.</div>
    }
    else
    {
        <table class="table table-active table-striped table-hover rounded mt-3">
            <caption>List of all people</caption>
            <thead>
                <tr class="d-table-row">
                    <th class="d-table-cell">Name</th>
                    <th class="d-table-cell">Age</th>
                    <th class="d-table-cell">Email</th>
                    <th class="d-table-cell">Phonenumber</th>
                    <th class="d-table-cell">City</th>
                    <th class="d-table-cell">Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.People)
                {
                    <partial name="_person" model="item" />
                }
            </tbody>
        </table>
    }
</div>