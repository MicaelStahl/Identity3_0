@model RegisterUser
@{
    ViewData["Title"] = "Register";
}

<h1>Register user</h1>
<hr />
<partial name="_GoBackButton" />

@if (ViewBag.created != null)
{
    <div class="container col-4 text-success font-weight-bold">@ViewBag.created</div>
}

@if (ViewBag.error != null)
{

    <div class="container col-4 text-danger font-weight-bold">@ViewBag.error</div>
}

<div class="col-3 shadow border">
    <form asp-action="Register" asp-controller="Account" method="post">
        <h1>Register</h1>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold col-12"></div>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" placeholder="Firstname" autofocus />
            <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" placeholder="Lastname" />
            <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Email"></label>
            <input id="EmailRegistration" class="form-control" asp-for="Email" placeholder="Email" />
            <span id="EmailRegistrationVali" class="text-danger font-weight-bold" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Age"></label>
            <input class="form-control" asp-for="Age" placeholder="Age" />
            <span class="text-danger font-weight-bold" asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="PhoneNumber"></label>
            <input class="form-control" asp-for="PhoneNumber" placeholder="Phonenumber" />
            <span class="text-danger font-weight-bold" asp-validation-for="PhoneNumber"></span>
        </div>
        @if (User.IsInRole("Administrator"))
        {
            <div class="form-group">
                <label class="control-label" asp-for="IsAdmin"></label>
                <input class="form-inline" asp-for="IsAdmin" />
            </div>
        }
        <div class="form-group">
            <label class="control-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" placeholder="Password" />
            <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="PasswordConfirmation"></label>
            <input class="form-control" asp-for="PasswordConfirmation" type="password" placeholder="Confirm password" />
            <span class="text-danger font-weight-bold" asp-validation-for="PasswordConfirmation"></span>
        </div>
        <div class="form-group">
            <input id="registerSubmitBtn" type="submit" value="Submit" class="btn btn-primary btn-sm" />
        </div>
    </form>
</div>