@model ForgottenUserPassword
@{
    ViewData["Title"] = "Forgotten Password";
}

<h1>Forgotten Password</h1>
<hr />

<div class="col-3 border shadow container">
    <h2>Reset password</h2>
    <hr />

    <form asp-action="ForgottenPassword" asp-controller="Account">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Email" required />
            <span asp-validation-for="Email" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
        </div>
    </form>
</div>