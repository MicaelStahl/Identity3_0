@model SignInUser

@{Layout = "_Layout"; }
@*

    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="modal fade" role="dialog" id="signInModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Sign in</h2>
                <button class="close" type="button" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form asp-action="SignIn" asp-controller="Account" role="form">
                    @Html.AntiForgeryToken()

                    @if (ViewBag.message != null)
                    {
                        <div class="font-weight-bold text-danger updatedText">@ViewBag.message</div>
                    }

                    <div asp-validation-summary="All" class="font-weight-bold text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="font-weight-bold text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Password"></label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="font-weight-bold text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
                        No account? <a asp-action="Register" asp-controller="Account">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $("#signInModal").ready(function () {

        const options = { "backdrop": "static", keyboard: true };
        $("#signInModal").modal(options);
        $("#signInModal").modal("show");
    })
</script>