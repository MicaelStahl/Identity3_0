@model PasswordResetting

@{
    ViewData["Title"] = "Reset password";
}

<h1>Reset password</h1>
<hr />

<div class="col-3 shadow border">
    <form asp-action="PasswordReset" asp-controller="Account">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="Token" />
        <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" placeholder="Password" required />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password" required />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
        </div>
    </form>
</div>