@model SignInUser
@{
    ViewData["Title"] = "SignIn";
}

<h1>Sign in</h1>
<hr />

<div class="container shadow border col-4">
    <h1>Sign in</h1>
    <hr />
    <form asp-action="SignIn" asp-controller="Account" method="post">
        <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label class="control-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" autofocus />
            <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="RememberMe" />
            <label asp-for="RememberMe"></label>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary btn-sm" />
            <div class="float-right">Not registered? <a asp-action="Register" asp-controller="Account">Register</a></div>
        </div>
    </form>
</div>